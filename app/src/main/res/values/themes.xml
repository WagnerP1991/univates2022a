<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeuApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BotaoGradiente" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gradient</item>
    </style>

    <style name="BotaoComBorda" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/notosansjpblack</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="Rotulo" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Theme.MeuApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeuApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MeuApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>